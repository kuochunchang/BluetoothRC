<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kc.rc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kc.rc.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kc.rc.AuxSettingActivity"
            android:label="@string/title_activity_aux_setting"
            android:screenOrientation="landscape" >
        </activity>

        <service android:name="com.kc.rc.ChannelValueService" />

        <activity
            android:name="com.kc.rc.BluetoothSetupActivity"
            android:label="@string/title_activity_bluetooth_scan"
            android:screenOrientation="landscape" >
        </activity>

        <service
            android:name="com.kc.rc.BluetoothService"
            android:enabled="true" >
        </service>
    </application>

</manifest>